# THETA Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=THETA
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Aliyun PAI-DLC Configuration
# ============================================================================
# 阿里云 AccessKey (从 RAM 控制台获取)
ALIBABA_CLOUD_ACCESS_KEY_ID=your_access_key_id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your_access_key_secret

# PAI 工作空间 ID (从 PAI 控制台获取)
PAI_WORKSPACE_ID=your_workspace_id
PAI_REGION_ID=cn-shanghai

# DLC 训练配置
DLC_IMAGE=registry.cn-shanghai.aliyuncs.com/pai-dlc/pytorch-training:2.1-gpu-py310-cu121-ubuntu22.04
DLC_INSTANCE_TYPE=ecs.gn6i-c4g1.xlarge

# ============================================================================
# OSS Configuration
# ============================================================================
OSS_BUCKET=theta-prod-20260123
OSS_ENDPOINT=oss-cn-shanghai.aliyuncs.com
OSS_INTERNAL_ENDPOINT=oss-cn-shanghai-internal.aliyuncs.com

# ============================================================================
# Path Configuration
# ============================================================================
# 本地开发时使用本地路径
THETA_BASE=/root/autodl-tmp

# 云端运行时使用 OSS 路径
# THETA_BASE=oss://theta-prod-20260123

# ============================================================================
# CORS Configuration
# ============================================================================
# 允许的前端域名 (逗号分隔)
CORS_ORIGINS=http://localhost:3000,https://code-soul.com
